


<div class="wrapper">
  <div class="container">

    <%= simple_form_for [@restaurant, @review], method: 'post' do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :rating, label: 'Choose a rating', collection: [0, 1, 2, 3, 4, 5], error: "Category must be given", error: "Rating must be given"  %>
        <%= f.input :content, label: 'Your review', error: "Review must not be blank" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>
